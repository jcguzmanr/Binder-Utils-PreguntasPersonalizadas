# Variables de entorno para QA Personalizado Service
# Copia este archivo a .env y configura tus valores

# OpenAI API Key (requerido)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Configuraci贸n OpenAI
OPENAI_MODEL=gpt-4o-mini
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo
OPENAI_MAX_OUTPUT_TOKENS=4096
OPENAI_TIMEOUT=60

# Configuraci贸n QA
QA_MAX_PREGUNTAS=50
QA_MAX_CHARS_PREGUNTA=300
QA_MIN_CHARS_CONTRATO=100

# Configuraci贸n Webhook
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_BACKOFF_BASE=1.5
WEBHOOK_ASYNC_MODE=false

# Configuraci贸n AWS
AWS_REGION=us-east-1
LOG_LEVEL=INFO
ALLOWED_ORIGIN=*

# Seguridad (opcional)
REQUIRE_HTTPS_WEBHOOK=false
ALLOWED_WEBHOOK_DOMAINS=

# Archivo de prompt personalizado (opcional)
PROMPT_FILE=
